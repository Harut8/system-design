# Application Configuration
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/twitter_search

# Redis
REDIS_URL=redis://localhost:6379/0

# Search Settings
SEARCH_LOOKBACK_DAYS=7
SEARCH_DEFAULT_LIMIT=20
SEARCH_MAX_LIMIT=100

# Trending Settings
TRENDING_WINDOW_HOURS=1
TRENDING_REFRESH_SECONDS=30
TRENDING_TOP_N=50


# Autocomplete Settings
AUTOCOMPLETE_SUGGESTIONS=3
AUTOCOMPLETE_REFRESH_SECONDS=300
AUTOCOMPLETE_MAX_PREFIX_LENGTH=15

# Cache TTLs (seconds)
CACHE_SEARCH_TTL=30
CACHE_TRENDING_TTL=60
CACHE_AUTOCOMPLETE_TTL=600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
